<h1>
<%= @page.title %>
</h1>

<blockquote>
  <%= @page.content %>
</blockquote>

<cite>
  Author: <%= @page.author %>
</cite>

<br />

<i>
  Created at: <%= @page.created_at %>
</i>

<br />

<i>
  Last updated: <%= @page.updated_at %>
</i>

<br />
<hr />

<div class='action-buttons'>
  <%= link_to 'Edit', edit_page_path(@page) %>
  <%= link_to 'Delete', page_path(@page),
   method: :delete,
    data: {confirm: "Really Delete?"} %>
  <%= link_to "All Post's", pages_path %>
</div>
